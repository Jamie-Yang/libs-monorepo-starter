{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es6",
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "moduleResolution": "Bundler",
    "module": "ES2022",
    "baseUrl": "."
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib"]
}
