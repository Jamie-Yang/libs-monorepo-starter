{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES2022",
    "module": "NodeNext",
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "allowJs": true
  },
  "include": ["src/**/*"]
}
