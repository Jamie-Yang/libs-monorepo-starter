{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "downlevelIteration": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": ["esnext", "dom"],
    "allowJs": true
  },
  "include": ["src/**/*"]
}
